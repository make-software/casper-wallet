    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.7.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.2",
    "url-loader": "^4.1.1",
    "web-ext": "^6.7.0",
    "webextension-polyfill": "0.9.0",
    "webpack": "^5.60.0",
