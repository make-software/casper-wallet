  "scripts": {
    "build:chrome": "NODE_ENV=production BABEL_ENV=production BROWSER=chrome node utils/build.js",
    "build:firefox": "NODE_ENV=production BABEL_ENV=production node utils/build.js",
    "start:chrome": "npm run build:chrome && NODE_ENV=development BABEL_ENV=development BROWSER=chrome PORT=3001 node utils/webserver.js",
    "start:safari": "npm run build:firefox && ./safari_build.sh && NODE_ENV=development BABEL_ENV=development BROWSER=safari PORT=3002 node utils/webserver.js",
    "start:firefox": "npm run build:firefox && web-ext run --source-dir ./build/firefox -u about:debugging#/runtime/this-firefox",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "test:unit": "jest --no-cache",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.md": "markdownlint",
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
