{
  "name": "casper-signer-v2",
  "version": "0.1.0",
  "scripts": {
    "devtools:redux": "redux-devtools --hostname=localhost --port=8000",
    "build:manifest:v2": "NODE_ENV=production BABEL_ENV=production BROWSER=firefox node utils/build.js",
    "dev:build:manifest:v2": "NODE_ENV=development BABEL_ENV=development BROWSER=firefox node utils/build.js",
    "build:chrome": "NODE_ENV=production BABEL_ENV=production BROWSER=chrome node utils/build.js",
    "build:firefox": "npm run build:manifest:v2",
    "build:safari": "npm run build:manifest:v2 && ./safari_build.sh",
    "build:all": "npm run build:chrome && npm run build:safari && cd ./build && zip builds.zip ./*",
    "dev:build:chrome": "NODE_ENV=development BABEL_ENV=development BROWSER=chrome node utils/build.js",
    "dev:build:firefox": "npm run dev:build:manifest:v2",
    "dev:chrome": "npm run dev:build:chrome && NODE_ENV=development BABEL_ENV=development BROWSER=chrome PORT=3001 ts-node --project scripts.tsconfig.json utils/webserver.js",
    "start:chrome": "concurrently -k -n start,redux \"npm run dev:chrome\" \"npm run devtools:redux\"",
    "dev:firefox": "npm run dev:build:firefox && NODE_ENV=development BABEL_ENV=development BROWSER=firefox PORT=3002 ts-node --project scripts.tsconfig.json utils/webserver.js",
    "start:firefox": "concurrently -k -n start,redux \"npm run dev:firefox\" \"npm run devtools:redux\"",
    "start:safari": "npm run dev:build:manifest:v2 && ./build_xcode_framework.sh && NODE_ENV=development BABEL_ENV=development BROWSER=safari PORT=3003 ts-node --project scripts.tsconfig.json utils/webserver.js",
    "test:e2e:chrome": "npm run build:chrome && SELENIUM_BROWSER=chrome jest --config=jest.e2e.config.js --detectOpenHandles e2e/tests",
    "test:e2e:firefox": "npm run build:firefox && SELENIUM_BROWSER=firefox jest --config=jest.e2e.config.js --detectOpenHandles e2e/tests",
    "format:check": "prettier --check 'src/*.{js,jsx,ts,tsx,json,md}'",
    "format:write": "prettier --write 'src/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "tsc": "tsc -p ./ --noEmit",
    "test": "jest --no-cache --passWithNoTests",
    "prepare": "husky install",
    "locale:extract_pot": "i18next 'src/**/*.{ts,tsx}' && node scripts/locale_extract_pot.js",
    "locale:update_translations": "node scripts/locale_update_translations.js",
    "ci-check": "npm run format:check && npm run lint && npm run tsc && npm run test"
  },
  "lint-staged": {
    "*.md": "markdownlint",
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "npm run format:write"
    ]
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.8",
    "@hot-loader/react-dom": "^17.0.1",
    "@lapo/asn1js": "^1.2.1",
    "@types/webextension-polyfill": "^0.8.3",
    "casper-js-sdk": "^2.9.1",
    "facepaint": "^1.2.1",
    "i18next": "^21.6.16",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.0",
    "i18next-parser": "^6.3.0",
    "lodash.throttle": "4.1.1",
    "mac-scrollbar": "^0.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.30.0",
    "react-hot-loader": "^4.13.0",
    "react-i18next": "^11.16.6",
    "react-inlinesvg": "^3.0.0",
    "react-loading-skeleton": "^3.1.0",
    "react-redux": "8.0.0",
    "react-router-dom": "^6.3.0",
    "redux": "4.2.0",
    "reselect": "^4.1.5",
    "styled-components": "^5.3.3",
    "typesafe-actions": "5.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@redux-devtools/cli": "^1.0.7",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/chrome": "^0.0.161",
    "@types/expect": "^24.3.0",
    "@types/facepaint": "^1.2.2",
    "@types/jest": "^27.4.0",
    "@types/lodash.throttle": "4.1.7",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/remote-redux-devtools": "^0.5.5",
    "@types/selenium-webdriver": "^4.0.18",
    "@types/styled-components": "^5.1.21",
    "@types/testing-library__react": "^10.2.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "chromedriver": "^99.0.0",
    "concurrently": "^7.1.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^6.7.1",
    "css-to-xpath": "^0.1.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.0.0",
    "geckodriver": "^3.0.1",
    "html-loader": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "i18next-conv": "^12.1.1",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.5.1",
    "remote-redux-devtools": "^0.5.16",
    "selenium-webdriver": "^4.1.1",
    "source-map-loader": "^3.0.0",
