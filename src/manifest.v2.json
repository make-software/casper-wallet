{
  "manifest_version": 2,
  "permissions": ["storage", "activeTab"],
  "content_security_policy": "default-src 'self'; frame-ancestors 'none';",
  "icons": {
    "16": "assets/img/logo16.png",
    "64": "assets/img/logo64.png",
    "128": "assets/img/logo128.png",
    "192": "assets/img/logo192.png"
  },
  "browser_action": {
    "default_popup": "./apps/popup/index.html",
    "default_icon": {
      "16": "assets/img/logo16.png",
      "64": "assets/img/logo64.png",
      "128": "assets/img/logo128.png",
      "192": "assets/img/logo192.png"
    }
  },
  "background": {
    "scripts": ["./background/index.ts"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./content/index.ts"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["./sdk.bundle.js"]
}
