{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "CasperLabs Signer",
  "author": "https://casperlabs.io",
  "description": "CasperLabs Signer tool for signing transactions on the blockchain.",
  "icons": {
    "16": "logo16.png",
    "64": "logo64.png",
    "128": "logo128.png",
    "192": "logo192.png"
  },
  "permissions": ["notifications", "storage", "tabs"],
  "background": {
    "scripts": ["./background.bundle.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "*://aohghmighlieiainnegkcijnfilokake/*"
      ],
      "js": ["./contentScript.bundle.js", "./scripts/inpage.bundle.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16.png",
      "64": "logo64.png",
      "128": "logo128.png",
      "192": "logo192.png"
    },
    "default_title": "CasperLabs Signer"
  },
  "web_accessible_resources": ["logo64.png", "scripts/inpage.bundle.js"]
}
